<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ScrollPickerView">
        <!--行数-->
        <attr name="scrollPicker_rows" format="integer" />
        <!--行间距-->
        <attr name="scrollPicker_spacing" format="float" />
        <!--字体大小-->
        <attr name="scrollPicker_textSize" format="float" />
        <!--字体格式，宽度为wrap_content时用于计算宽度-->
        <attr name="scrollPicker_textFormat" format="string" />
        <!--字体放大倍数-->
        <attr name="scrollPicker_textRatio" format="float" />
        <!--选中时字体颜色-->
        <attr name="scrollPicker_textColor_center" format="color" />
        <!--未选中时字体颜色-->
        <attr name="scrollPicker_textColor_outside" format="color" />
        <!--文本对齐方式（左、中、右）-->
        <attr name="scrollPicker_gravity" format="integer" />
        <!--是否开启循环-->
        <attr name="scrollPicker_loop" format="boolean" />

    </declare-styleable>

    <!-- 自定义星星属性 -->
    <declare-styleable name="StarView">
        <!--        //星星数量-->
        <attr name="starsNum" format="integer" />
        <!--        //星星宽度-->
        <attr name="starWidth" format="dimension" />
        <!--        //星星高度-->
        <attr name="starHeight" format="dimension" />
        <!--        //星星间距-->
        <attr name="starDistance" format="dimension" />
        <!--        //星星背景-->
        <attr name="starBackground" format="reference" />
        <!--        //星星变化背景-->
        <attr name="starDrawBackground" format="reference" />
        <!--        //控件是否可以点击-->
        <attr name="starClickable" format="boolean" />
    </declare-styleable>


    <!-- 宽高比控件基本自定义属性-->
    <declare-styleable name="ViewSizeCalculate">
        <!-- 设置宽度的视图比例大小 -->
        <attr name="widthRatio" format="float" />
        <!-- 设置视图比例高度的大小 -->
        <attr name="heightRatio" format="float" />
        <!-- 设置正方形的视图比例大小 -->
        <attr name="layoutSquare" format="boolean" />
        <!-- 设置纵横比的显示比例大小 -->
        <attr name="layoutAspectRatio" format="float" />
        <!-- 设置模式的视图比例大小 -->
        <attr name="datumRatio">
            <enum name="datumAuto" value="0" />
            <enum name="datumWidth" value="1" />
            <enum name="datumHeight" value="2" />
        </attr>
    </declare-styleable>

    <!-- RatioFrameLayout -->
    <declare-styleable name="RatioFrameLayout" parent="ViewSizeCalculate">
        <attr name="widthRatio"/>
        <attr name="heightRatio"/>
        <attr name="datumRatio"/>
        <attr name="layoutSquare"/>
        <attr name="layoutAspectRatio"/>
    </declare-styleable>

    <!-- RatioImageView -->
    <declare-styleable name="RatioImageView" parent="ViewSizeCalculate">
        <attr name="widthRatio" />
        <attr name="heightRatio" />
        <attr name="datumRatio" />
        <attr name="layoutSquare" />
        <attr name="layoutAspectRatio" />

        <attr name="radius" format="dimension" />
        <attr name="left_top_radius" format="dimension" />
        <attr name="right_top_radius" format="dimension" />
        <attr name="right_bottom_radius" format="dimension" />
        <attr name="left_bottom_radius" format="dimension" />

    </declare-styleable>

    <declare-styleable name="TextIconView">
        <attr name="icon" format="reference" />
        <attr name="tintColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="title" format="string" />
        <attr name="iconSize" format="dimension" />
        <attr name="iconWidth" format="dimension" />
        <attr name="iconHeight" format="dimension" />
        <attr name="iconPosition" format="enum">
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
            <enum name="left" value="4" />

        </attr>

    </declare-styleable>

</resources>